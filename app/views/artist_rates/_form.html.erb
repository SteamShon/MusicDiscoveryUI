<%= form_for(ArtistRate.new, { remote: true, class: "form-search" }) do |f| %>
  <%= f.hidden_field :tag_id, value: params[:tag_id] %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :artist_id, value: artist.id %>
  <%= f.select :score, options_for_select((1..10)), { include_blank: true } %>
  <%= f.submit "Rate", { class: "btn" } %>
<% end %>

